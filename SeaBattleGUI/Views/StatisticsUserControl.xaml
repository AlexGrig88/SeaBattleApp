<UserControl x:Class="SeaBattleGUI.Views.StatisticsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattleGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControlStats">
    <StackPanel>
        <Button Click="ButtonReturnFromStatistics_Click" FontSize="16" Background="#FFD886A4" Foreground="#FF040000" Padding="5,5,5,7" Cursor="Hand" FontWeight="SemiBold" BorderBrush="#FF7F5B5B">Вернуться назад</Button>
        <RichTextBox x:Name="RichTextBoxStat" IsReadOnly="True">
            <FlowDocument>
                <Paragraph TextAlignment="Center" FontSize="18" FontWeight="Bold" >
                    Статистика всех зарегистрированных игроков
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        
    </StackPanel>
</UserControl>
